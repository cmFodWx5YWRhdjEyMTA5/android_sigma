<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.sigma.prouds.ProjectDetailsActivity">

    <!-- Toolbar start -->
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/header"
        android:paddingRight="16dp"
        android:id="@+id/tb_project_details"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/back"
                android:id="@+id/iv_back"/>

            <TextView
                android:id="@+id/tv_title_toolbar_assignment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toolbar_projectdetails"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/iv_notif"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="visible"
                app:srcCompat="@drawable/notif" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <!-- Toolbar end -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tb_project_details"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:id="@+id/ll_pd_header">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <!-- Project Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/iv_menu"

                android:textSize="18sp"
                android:textColor="@color/homeChild"
                android:id="@+id/tv_pd_project" />

            <!-- Menu -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="12dp"
                app:srcCompat="@drawable/menu"
                android:layout_alignParentRight="true"
                android:id="@+id/iv_menu"/>
        </RelativeLayout>

        <!-- Progress Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">
            <ProgressBar
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_weight="1"
                android:id="@+id/pb_project_details"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:textSize="14sp"
                android:id="@+id/tv__pd_percen"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/homeChild"
                android:id="@+id/tv_pd_status"/>
        </LinearLayout>

        <!-- Tab menu -->
        <android.support.design.widget.TabLayout
            android:id="@+id/tl_project_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:tabMode="fixed"
            app:tabGravity="fill"
            android:background="@color/white"
            app:tabIndicatorHeight="3dp"
            app:tabIndicatorColor="@color/header"/>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_pd_header"
        android:layout_marginTop="16dp"
        android:id="@+id/vp_projec_details">
    </android.support.v4.view.ViewPager>

</RelativeLayout>
