<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sigma.prouds.AssignmentDetailsActivity"
    android:background="@color/background">

    <!-- Toolbar start -->
    <include
        android:id="@+id/tb_assignment_details"
        layout="@layout/toolbar_assignment_details"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
    </include>
    <!-- Toolbar end -->

    <!-- Search start -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="horizontal"
        android:layout_below="@+id/tb_assignment_details"
        android:id="@+id/ll_search">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:textSize="14sp"
            android:background="@color/white"
            android:hint="@string/search_hint"
            android:id="@+id/et_search" />
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_toRightOf="@id/et_search"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/search" />
    </LinearLayout>
    <!-- Search stop -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/ll_search"
        android:padding="16dp"
        android:background="@color/white"
        android:id="@+id/ll_assignment_task">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_assignment_details"
                android:textSize="14sp"
                android:textColor="@color/homeParent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"/>
            <TextView
                android:id="@+id/tv_assignment_task"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <!--Recycler View start-->
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_assignment_task"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:id="@+id/rv_assignment_details">
    </android.support.v7.widget.RecyclerView>
    <!--Recycler View end-->

</RelativeLayout>
