<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/chart_ts"
                        android:textSize="18sp"/>
                    <View
                        android:layout_width="45dp"
                        android:layout_height="3dp"
                        android:background="@color/btn"/>
                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:padding="2dp"
                    android:background="@drawable/gray_box"
                    android:layout_weight="3"
                    android:id="@+id/et_chart_tsmonth"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_weight="4"
                    android:background="@drawable/gray_box"
                    android:id="@+id/et_chart_tsyear"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.github.lzyzsd.circleprogress.DonutProgress
                    android:layout_marginLeft="50dp"
                    android:id="@+id/pb_user_entry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    custom:donut_progress="0"
                    custom:donut_finished_color="@color/splash"/>

                <com.github.lzyzsd.circleprogress.DonutProgress
                    android:layout_marginLeft="50dp"
                    android:id="@+id/pb_user_utilization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    custom:donut_progress="0"
                    custom:donut_finished_color="@color/splash"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/chart_util"
                        android:textSize="18sp"/>
                    <View
                        android:layout_width="45dp"
                        android:layout_height="3dp"
                        android:background="@color/btn"
                        android:layout_marginBottom="12dp"/>



                </LinearLayout>
                <EditText
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:background="@drawable/gray_box"
                    android:id="@+id/et_chart_utilyear"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart_utilization"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:visibility="invisible"
                 />

                <ProgressBar
                    android:id="@+id/pb_chart_util"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/chart_entry"
                        android:textSize="18sp"/>
                    <View
                        android:layout_width="45dp"
                        android:layout_height="3dp"
                        android:background="@color/btn"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/et_chart_entryyear"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:background="@drawable/gray_box"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart_entry"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:visibility="invisible"
                />

                <ProgressBar
                    android:id="@+id/pb_chart_entry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
